{
  // この設定ファイルをプロジェクトのルートとする
  "root": true,

  // 各種 ESLint の基本設定を継承
  "extends": [
    // Next.js の推奨設定と Core Web Vitals チェック
    "next/core-web-vitals",

    // ESLint の基本ルール
    "eslint:recommended",

    // TypeScript 用のルール
    "plugin:@typescript-eslint/recommended",

    // import順序などのチェック
    "plugin:import/recommended",
    "plugin:import/typescript",

    // Prettier のフォーマットルールを優先
    "plugin:prettier/recommended"
  ],

  // 使用するプラグインを指定
  "plugins": ["@typescript-eslint", "import", "prettier"],

  // TypeScript 設定
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json",
    "sourceType": "module"
  },

  // 共通ルール
  "rules": {
    // 文末にセミコロンを強制
    "semi": ["error", "always"],

    // シングルクォートを強制
    "quotes": ["error", "single", { "avoidEscape": true }],

    // 未使用変数の警告（引数で _ を使うと無視）
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],

    // React Hooks の依存チェック
    "react-hooks/exhaustive-deps": "warn",

    // import の順序と空行ルール
    "import/order": [
      "warn",
      {
        "groups": ["builtin", "external", "internal", "parent", "sibling", "index"],
        "newlines-between": "always"
      }
    ],

    // Prettier に違反している箇所を自動修正
    "prettier/prettier": "error"
  },

  // フォルダごとの関数スタイル制御
  "overrides": [
    {
      // components, hooks, contexts, scripts ではアロー関数を強制
      "files": [
        "components/**/*.{ts,tsx}",
        "hooks/**/*.{ts,tsx}",
        "contexts/**/*.{ts,tsx}",
        "scripts/**/*.{ts,tsx}"
      ],
      "rules": {
        "prefer-arrow-callback": ["error"],
        "func-style": ["error", "expression"]
      }
    },
    {
      // app, lib, types ではfunction宣言を許容（むしろ推奨）
      "files": ["app/**/*.{ts,tsx}", "lib/**/*.{ts,tsx}", "types/**/*.{ts,tsx}"],
      "rules": {
        "prefer-arrow-callback": "off",
        "func-style": ["error", "declaration"]
      }
    }
  ],

  // import 解決のための設定
  "settings": {
    "import/resolver": {
      // TypeScriptのパスエイリアス解決
      "typescript": {}
    }
  }
}
